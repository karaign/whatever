{
    "parser": "babel-eslint",
    "root": true,
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
          "impliedStrict": true
        }
    },
    "ignore": [
      "client/app/app.constant.js"
    ],
    "rules": {
        "indent": [
            "warn",
            2
        ],
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "quotes": [
            "warn",
            "single",
            "avoid-escape"
        ],
        "semi": [
            "warn",
            "always"
        ],
        "no-console": 0,
        "no-unused-vars": [
          1,
          {"args": "none"}
        ],
        "strict": [
          1,
          "global"
        ],
        "no-lonely-if": 1,
            "max-len": [
              1,
              150
            ],
        "no-mixed-spaces-and-tabs": 1,
        "no-multi-str": 1,
        "key-spacing": [
          1,
          {
            "beforeColon": false,
            "afterColon": true,
            "mode": "minimum"
          }
        ],
        "space-unary-ops": [
          1,
          {
            "words": false,
            "nonwords": false
          }
        ],
        "space-before-function-paren": [
          1,
          "never"
        ],
        "array-bracket-spacing": [
          1,
          "never"
        ],
        "space-in-parens": [
          1,
          "never"
        ],
        "comma-dangle": [
          1,
          "never"
        ],
        "no-trailing-spaces": [
          1,
          {"skipBlankLines": true}
        ],
        "comma-style": [
          1,
          "last"
        ],
        "space-infix-ops": 1,
        "keyword-spacing": [
          1,
          {
            "overrides": {
              "if": {
                "after": true
              },
              "else": {
                "after": true
              },
              "for": {
                "after": true
              },
              "while": {
                "after": true
              },
              "do": {
                "after": true
              },
              "switch": {
                "after": true
              },
              "return": {
                "after": true
              },
              "try": {
                "after": true
              },
              "catch": {
                "after": true
              }
            }
          }
        ],
        "space-before-blocks": [
          1,
          "always"
        ]
  }
}
